[Unit]
Description=app.js - making your environment variables ready
After=network.target

[Service]
EnvironmentFile=/home/ubuntu/webapp/.env
Type=simple
User=ubuntu
ExecStart=/usr/bin/node /home/ubuntu/webapp/app.js
ExecStartPost=/bin/sh -c "sudo iptables -t nat -A PREROUTING -p tcp --dport 80 -j REDIRECT --to-ports 3000"
Restart=on-failure

[Install]
WantedBy=multi-user.target